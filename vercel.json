{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/main\\.js",
      "headers": { "content-type": "application/javascript" },
      "dest": "/dist/main.js"
    },
    {
      "src": "/styles/styles\\.css",
      "headers": { "content-type": "text/css" },
      "dest": "/dist/styles/styles.css"
    },
    {
      "src": "/(.*)\\.js",
      "headers": { "content-type": "application/javascript" },
      "dest": "/dist/$1.js"
    },
    {
      "src": "/(.*)\\.css",
      "headers": { "content-type": "text/css" },
      "dest": "/dist/$1.css"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}