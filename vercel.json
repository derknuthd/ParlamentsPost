{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "frontend/public/**/*",
      "use": "@vercel/static",
      "config": {
        "zeroConfig": true
      }
    },
    {
      "src": "frontend/styles/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/main.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/main.js",
      "headers": { "content-type": "application/javascript" },
      "dest": "/frontend/main.js"
    },
    {
      "src": "/styles/(.*)\\.css",
      "headers": { "content-type": "text/css" },
      "dest": "/frontend/styles/$1.css"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}